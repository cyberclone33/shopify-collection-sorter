{% comment %}
  This block adds the LINE login form processor to the login page
{% endcomment %}

<script>
  // Wait for the page to fully load and URL parameters to be available
  window.addEventListener('load', function() {
    setTimeout(function() {
      {% render 'line_login_processor' %}
    }, 500); // 500ms delay
  });
</script>

<div id="line-login-container"></div>

{% schema %}
{
  "name": "LINE Login Form",
  "target": "section",
  "templates": ["customers/login"],
  "settings": []
}
{% endschema %}
